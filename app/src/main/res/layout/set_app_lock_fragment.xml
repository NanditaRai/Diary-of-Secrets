<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:windowSoftInputMode="adjustPan"
    android:id="@+id/set_app_lock_fragment_screen"
    tools:context="com.example.diaryofsecrets.CatalogActivity">

    <Button
        android:id="@+id/set_password_button"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/set_password"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center">


    <TextView
        android:id="@+id/set_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/set_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/set_password_text"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/set_password_first_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number" />

        <EditText
            android:id="@+id/set_password_second_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/set_password_third_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/set_password_forth_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

    </LinearLayout>

    <TextView
        android:id="@+id/confirm_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_password"
        android:layout_marginTop="20dp"
        android:text="@string/confirm_password"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/confirm_password_text"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/confirm_password_first_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/confirm_password_second_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/confirm_password_third_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/confirm_password_forth_digit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_black_outline"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/security_question_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/security_question_answer"
            android:layout_width="match_parent"
            android:hint="@string/write_your_answer"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>