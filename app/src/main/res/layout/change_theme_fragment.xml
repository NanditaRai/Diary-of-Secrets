<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/default_theme"
        android:background="@drawable/blue_theme_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/first_theme"
        android:background="@drawable/golden_theme_button_selector"
        android:layout_below="@id/default_theme"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/second_theme"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_theme_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_theme" />

    <Button
        android:id="@+id/third_theme"
        android:layout_marginTop="20dp"
        android:background="@drawable/purple_theme_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_theme" />

    <Button
        android:id="@+id/forth_theme"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_theme_button_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/third_theme" />

</RelativeLayout>